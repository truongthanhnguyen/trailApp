<div id="like_form">
  <% if current_user.like? micropost %>
    <%= render "likes/unlike", micropost: micropost,
      like: current_user.likes.find_by(micropost_id: micropost.id) %>
    <span class="btn btn-default disabled">
      <%= micropost.likes.count %>
    </span>
  <% else %>
    <%= render "likes/like", micropost: micropost %>
    <span class="btn btn-default disabled">
      <%= micropost.likes.count %>
    </span>
  <% end %>
</div>
