<% provide :title, t("home.log_in") %>
<h1><%= t "home.log_in" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to t("user.forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "user.remember_me" %></span>
      <% end %>

      <%= f.submit t("home.log_in"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "home.new_user?" %><%= link_to t("home.sign_up_now"), signup_path %></p>
  </div>
</div>
