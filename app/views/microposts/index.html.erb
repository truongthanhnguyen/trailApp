<h1><%= t "micropost.all_entries" %></h1>
<% @microposts.each do |micropost| %>
  <div class="post">
    <h1 style="text-align: left">
      <%= link_to micropost.title, micropost %>
    </h1>
    <p class="lead">
      by<%= link_to micropost.user.name, micropost.user %>
    </p>
    <p>
      <span class="glyphicon glyphicon-time"></span>
      Posted<%= time_ago_in_words(micropost.created_at) %>ago.
      <!-- <p><%= micropost.content %></p> -->
      <span class="content">
        <p class="lead"><%= micropost.content %></p>
        <%= image_tag micropost.picture.url if micropost.picture? %>
      </span>
      <hr>
      <%= link_to t("micropost.read_more"), micropost, class: "btn btn-primary" %>
      <hr>
    </p>
  </div>
<% end %>
<%= will_paginate %>
