<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.user.avatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="title"><%= micropost.title %></span>
  <span class="content"><%= micropost.content %></span>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <span class="timestamp">
    <%= t "micropost.posted" %><%= time_ago_in_words(micropost.created_at) %><%= t "micropost.ago" %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("micropost.delete"), micropost, method: :delete, data: {confirm: t("micropost.you_sure")} %>
    <% end %>
  </span>
</li>
